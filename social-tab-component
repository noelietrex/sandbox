					<script type="text/javascript">
						jQuery(function(){
							
							$(".social-tab-component").click(function () {
								if ($(this).hasClass("js-active")) {
									$(this).removeClass("js-active");
								}
								else {
									$(".js-active").removeClass("js-active");
									$(this).addClass("js-active");
								}
							});
						});
